#!/bin/bash

if [[ $(whoami) != crowbar ]]; then
    su -l -c "$0" crowbar
    exit $?
fi
. /etc/profile
shopt -s globstar nullglob

if ! which yardoc &>/dev/null; then
    echo "YARD gem not installed."
    echo "Please install it to generate the developer documentation"
    exit 1
fi

cd /opt/opencrowbar
for d in **/.yardoc; do
    (   cd "${d%/*}" || continue
        yardoc && git add doc/internals
        rm -rf .yardoc
    )
done
